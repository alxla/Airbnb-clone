<div class="universe-cover" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @universe.picture %>')">
  <div class="universe-cover-title">
    <h1><%= @universe.name %></h1>
  </div>
</div>
<div class="profile-cover">
  <div class="container">
    <div class="row">
      <div class="col-xs-3">
        <%= cl_image_tag @universe.profile.picture, width: 200, height: 200, crop: :fill %>
      </div>
      <div class="col-xs-7">
        <div class="col-xs-12"><h2><%= @universe.profile.name %></h2>
        </div>
        <div class="col-xs-12"><p><%= @universe.profile.biography %></p>
        </div>
      </div>
      <div class="col-xs-2 btn-contact">Contact</a>
      </div>
    </div>
  </div>
</div>
<div class="container">
<% @universe.products.each do |product| %>
  <div class="row">
    <div class="col-xs-2"><%=cl_image_tag product.picture, width: 50, height: 50, crop: :fill %>
    </div>
    <div class="col-xs-5"><h3><%=product.name%></h3>
    </div>
    <div class="col-xs-3"><h3><%=product.price%></h3>
    </div>
    <div class="col-xs-2 btn-contact">Contact
    </div>
  </div>
  <% end %>
</div>
