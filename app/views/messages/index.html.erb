<h1>Messages#index</h1>
<%= link_to "Nouveau message", new_message_path, {class: "btn btn-primary"} %>

<% @messages.each do |message| %>
  <h3><%= message.title %></h3>
  <p><%= message.body %></p>
    <%= link_to "Update", edit_message_path(message) %>
    <%= link_to "Delete", message_path(message),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <hr>
<% end %>
