    <!-- Text link -->
    <a href="" class="navbar-kingdom-item navbar-kingdom-link">Contact</a>

    <!-- Text link -->
    <a href="" class="navbar-kingdom-item navbar-kingdom-link">Team</a>

    <!-- Notification link-->
    <a href="" class="navbar-kingdom-item navbar-kingdom-link">
        <%= link_to profile_requests_path(current_user.profile), class:"navbadge-container" do %>
          <i class="fa fa-envelope-o"></i>
        <% end %>
    </a>

    <!-- Profile picture and dropdown -->
    <div class="navbar-kingdom-item">
      <div class="dropdown">
        <img src="http://placehold.it/50x50" class="avatar dropdown-toggle" id="navbar-kingdom-menu" data-toggle="dropdown">
        <ul class="dropdown-menu dropdown-menu-right navbar-kingdom-dropdown-menu">
          <li><a href="#">Profile</a></li>
          <li><a href="#">Dashboard</a></li>
