  </a>

  <!-- Right Navigation -->
  <div class="navbar-kingdom-right hidden-xs hidden-sm">

    <!-- Search form -->
    <form action="" class="navbar-kingdom-search">
      <input type="text" class="navbar-kingdom-search-input" placeholder="Search something">
      <button type="submit" class="navbar-kingdom-search-btn">
        <i class="fa fa-search"></i>
      </button>
